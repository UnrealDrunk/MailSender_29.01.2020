<Window x:Class="Test_MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="880">
    <Grid>
        <Button Content="Send" Margin="320,215,0,230" Click="OnSendButtonClick" HorizontalAlignment="Left" Width="60"/>
        <TextBox x:Name="UserNameEdit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="175, 160, 0, 0"
                 Text="UserName" TextWrapping="Wrap" Width="120">
            <TextBox.Effect>
                <BlurEffect Radius="1"/>
            </TextBox.Effect>
        </TextBox>
        <PasswordBox HorizontalAlignment="Left" VerticalAlignment="top"
                     Name="PasswordEdit"
                     Margin="430,170,0,0" Width="120" Password="Password"/>
        <TextBlock Margin="170,135,0,0" Text="Имя пользователя" TextWrapping="Wrap" Width="120"
                   HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBlock Margin="435,135,0,0" Text="Пароль" TextWrapping="Wrap" Width="120"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Grid>
</Window>
